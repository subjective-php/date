{
    "name": "subjective-php/date",
    "description": "A collection of various PHP classes for use with PHP's DateTime extension.",
    "keywords": ["date", "time", "timezone"],
    "config": {
        "sort-packages": true
    },
    "license": "MIT",
    "require": {
        "php": "^7.0 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.5",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": { "SubjectivePHP\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "SubjectivePHPTest\\": "tests" }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit"
    }
}
